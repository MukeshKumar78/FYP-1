// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @unique
  email String @unique
  name String
  image String
  customImage String
  roles RolesOnUsers[]
  societies UserOnSociety[]
}

model Society {
  id String @id
  name String
  members UserOnSociety[]
}

model UserOnSociety {
  society Society @relation(fields: [societyId], references: [id])
  societyId String
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@id([societyId, userId])
}

model Role {
  id Int @id @default(autoincrement())  
  users RolesOnUsers[] 
  userId Int
}

model RolesOnUsers {
  role Role @relation(fields: [roleId], references: [id])
  roleId Int
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@id([roleId, userId])
}